<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_maniest_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.shqtn.wonong.ui.activity.ManifestListActivity">

    <com.shqtn.wonong.ui.widget.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        app:hideBackIcon="true"
        app:showRightIcon="false"
        app:title="任务单列表" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_edit"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/manifest_list_et_inputManifest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:hint="请输入任务单号"
            android:singleLine="true"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/manifest_list_ib_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/search_small_icon" />
    </LinearLayout>

    <ListView
        android:id="@+id/manifest_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />
</LinearLayout>
